<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nfadili.tacoma.uw.edu.jammit">

    <!-- To auto-complete the login_email_text text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register_label" />
        <activity android:name=".MainMenuActivity"
            android:label="Jammit - Main Menu"/>
        <activity android:name=".EditProfileActivity"
            android:label="Jammit - Edit Profile"/>
        <activity android:name=".SearchMusicianActivity"
            android:label="Jammit - Search Musicians"/>
        <activity android:name=".BrowseSearchedActivity"
            android:label="Jammit - Search Results"/>

    </application>

</manifest>