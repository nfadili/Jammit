<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nfadili.tacoma.uw.edu.jammit">

    <!-- To auto-complete the login_email_text text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:launchMode="singleTop"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register_label" />
        <activity
            android:name=".MainMenuActivity"

            android:label="Jammit" />
        <activity
            android:name=".EditProfile.EditProfileActivity"
            android:label="Jammit - Edit Profile" />
        <activity
            android:name=".FindMusicians.SearchMusicianActivity"
            android:label="Jammit - Search Musicians" />
        <activity
            android:name=".FindMusicians.BrowseSearchedActivity"
            android:label="Jammit - Search Results" />
        <activity
            android:name=".PostBandOpening.PostBandActivity"
            android:label="Jammit - Post Band Opening" />
        <activity
            android:name=".FindBand.FindBandActivity"
            android:label="Jammit - Search Band Openings" />
        <activity
            android:name=".FindBand.BrowseSearchedBandsActivity"
            android:label="Jammit - Search Results" />
        <activity
            android:name=".ScheduleActivity.ScheduleEventActivity"
            android:label="Jammit - Schedule Event" />

        <activity
            android:name=".FindEvents.FindEventsActivity"
            android:label="Jammit - Search Events" />
        <activity
            android:name=".FindEvents.BrowseSearchedEventsActivity"
            android:label="Jammit - Search Results" />

        <activity android:name=".ViewProfileActivity"
            android:label="Jammit - View Profile"/>

    </application>

</manifest>